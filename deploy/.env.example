# Murmuring Production Configuration
# Copy this file to .env and fill in the values.

# Domain name or IP address for this instance (required)
MURMURING_DOMAIN=murmuring.example.com

# SSL enforcement — set to false to allow HTTP connections.
# Only safe on private networks (LAN, Tailscale, Cloudflare Tunnel).
# Cannot be disabled when FEDERATION_ENABLED=true.
# FORCE_SSL=true

# Secrets — generate with: openssl rand -base64 48
SECRET_KEY_BASE=
JWT_SECRET=

# PostgreSQL password
POSTGRES_PASSWORD=

# Meilisearch master key
MEILI_MASTER_KEY=

# SFU shared auth secret
SFU_AUTH_SECRET=

# ALTCHA proof-of-work HMAC key — generate with: openssl rand -base64 32
ALTCHA_HMAC_KEY=

# TURN server secret
TURN_SECRET=

# TURN server URLs (comma-separated)
# TURN_URLS=turn:murmuring.example.com:3478

# Federation (optional)
# FEDERATION_ENABLED=true

# File storage (optional, defaults to local)
# STORAGE_BACKEND=s3
# S3_BUCKET=murmuring-uploads
# S3_ENDPOINT=https://s3.amazonaws.com
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Server port (default 4000)
# SERVER_PORT=4000

# Custom image tags (default: latest)
# MURMURING_IMAGE=murmuring/server:latest
# SFU_IMAGE=murmuring/sfu:latest
