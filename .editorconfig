root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{ex,exs,heex,eex}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,html}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{toml,md}]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
