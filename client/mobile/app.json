{
  "expo": {
    "name": "Murmuring",
    "slug": "murmuring",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "murmuring",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.murmuring.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Murmuring needs microphone access for voice channels",
        "NSFaceIDUsageDescription": "Use Face ID to unlock Murmuring",
        "UIBackgroundModes": ["audio", "voip", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "dev.murmuring.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      "expo-notifications",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
